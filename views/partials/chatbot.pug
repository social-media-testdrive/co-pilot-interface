//- Chat Box  
#chatbox1.container.clearfix
  .chat
    .chat-header.clearfix
      //- a.chat-close(href='#')
      //-   i.large.close.icon
      a.chat-minimize(href='#')
        i.window.minimize.large.icon
      img.ui.avatar.image(src='/profile_pictures/convo_bot.png')
      .chat-about
        .chat-with Chat with Co-Pilot
    .chat-history
      ul
        //- SAMPLE MESSAGE
        //- li.clearfix
        //-   .message-data.align-right
        //-     span.message-data-time 10:12 AM
        //-     span.message-data-name
        //-       i.dot.circle.icon.online
        //-       |  Jack
        //-   .message.my-message.align-right
        //-     | hey, I have a question about the homework for tomorrow
        //- TO DO: Edit chat interface to include photo of agent & participant
    .chat-message.clearfix
      .ui.fluid.action.input.form
        textarea#message-to-send(type='text', name='message-to-send', placeholder='Type your message', rows=2)
        button
          i.send.icon
          | Send
script#my-message-template(type='text/x-handlebars-template').
  <li class="clearfix">
  <div class="message-data align-right">
  <span class="message-data-time" >{{time}}</span> &nbsp; &nbsp;
  <span class="message-data-name" >Me</span> <i class="fa fa-circle me"></i>
  </div>
  <div class="message my-message align-right">
  {{messageOutput}}
  </div>
  </li>

script#other-message-template(type='text/x-handlebars-template').
  <li class="clearfix">
  <div class="message-data align-left">
  <span class="message-data-time" >{{time}}</span> &nbsp; &nbsp;
  <span class="message-data-name" >{{name}}</span> <i class="fa fa-circle me"></i>
  </div>
  <div class="message other-message align-left">
  {{messageOutput}}
  </div>
  </li>